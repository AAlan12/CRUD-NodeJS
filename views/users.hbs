<div class="bg-light p-5 rounded mt-3">
  <h1>List users</h1>
  {{#if table}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#ID</th>
        <th scope="col">Name</th>
        <th scope="col">E-mail</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <th scope="row">{{id}}</th>
        <td>{{name}}</td>
        <td>{{email}}</td>
        <td>
          <div class="row g-1">
            <div class="col-6 col-md-3">
              <a href="#" class="w-100 btn btn-info">Edit</a>
            </div>
            <div class="col-6 col-md-3">
              <a href="#" class="w-100 btn btn-danger">Delete</a>
            </div>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="card-body">
      No data found
  </div>
  {{/if}}
</div>